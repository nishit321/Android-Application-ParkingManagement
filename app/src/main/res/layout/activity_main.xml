<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.nishit.parkingmanagement.MainActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username1"
        app:layout_marginLeftPercent="20%"
        android:layout_below="@+id/imageView2">

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="User name"
            android:inputType="text"
            android:shadowColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textColorLink="@android:color/black"
            app:layout_marginTopPercent="0%" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password1"
        app:layout_marginLeftPercent="20%"
        android:layout_below="@+id/username1"
        >
    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:shadowColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:textColorHint="@android:color/black"

        android:textColorLink="@android:color/black"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:background="@color/button"
        app:layout_marginTopPercent="5%" />

    <ImageView
        android:id="@+id/imageView2"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="5%"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/validationUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username1"
        android:text="* You did not enter a username."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_marginTopPercent="0%" />

    <TextView
        android:id="@+id/validationPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:text="* You did not enter a password."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_marginTopPercent="0%" />

    <TextView
        android:id="@+id/btnRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        app:layout_marginTopPercent="5%"
        android:layout_marginRight="20dp"
        android:text="No account yet? Create One" />

</android.support.percent.PercentRelativeLayout>
